@model ArturTI225.Domain.Entities.Order
@{
    ViewBag.Title = "Admin panel";
    Layout = "../Shared/_CarsSalesLayout.cshtml";
}

<h2>Delete Order</h2>

<h3>Are you sure you want to delete this order?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Customer ID</dt>
        <dd>@Model.UserId</dd>

        <dt>Car ID</dt>
        <dd>@Model.CarId</dd>

        <dt>Order Date</dt>
        <dd>@Model.OrderDate.ToString("dd/MM/yyyy")</dd>

        <dt>Total Price</dt>
        <dd>@Model.TotalPrice.ToString("C")</dd>
    </dl>

    @using (Html.BeginForm("Delete", "CarsSalesPanel", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a href="@Url.Action("Index")">Cancel</a>
    }
</div>
